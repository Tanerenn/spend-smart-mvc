@{
    ViewData["Title"] = "Create / Edit";
}
@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or edit an expense</h1>
    <a asp-action="Expenses" class="btn btn-outline-dark">OverView</a>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    
    <input class="form-control" type="hidden" placeholder="0" asp-for="Id" />

    <label class="mt-4">Value ₺</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="1" />

    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="add a descrpition" asp-for="Description" />

    <button class="btn btn-outline-dark mt-4" type="submit">Submit</button>

</form>